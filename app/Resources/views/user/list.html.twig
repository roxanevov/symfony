{% extends "show/base.html.twig" %}

{% block pageHeading %}
Liste of users
{% endblock %}

{% block content%}
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Fullname</th>
        <th scope="col">Emain</th>
        <th scope="col">Roles</th>
    </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>#</td>
                <td>{{ user.fullname }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles | join(', ') }}</td>
            </tr>
        {% endfor %}
    </tbody>

</table>
{% endblock %}