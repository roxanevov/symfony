{% extends "show/base.html.twig" %}
{% block pageHeading %}
    {%  if update is defined %}
        Update show
    {% else %}
        Create a show
    {% endif %}
{% endblock %}

{% block content %}
    {# {{ form(showForm) }}#}
    {{ form_start(showForm, {"attr":{"novalidate":"novalidate"}}) }}
        {#{ form_widget(showForm) }}#}
        {#{{ form_row(showForm.name) }}#}
    {{ form_label(showForm.name) }}
    {{ form_widget(showForm.name) }}
    {{ form_errors(showForm.name) }}

    {{ form_rest(showForm) }}
    {%  if update is defined %}
        <input type="submit" value="update"/>
    {% else %}
        <input type="submit" value="create"/>
    {% endif %}

    {{ form_end(showForm) }}
{% endblock %}